{
  "name": "course",
  "private": true,
  "scripts": {
    "css:dev": "tailwindcss -i course/assets/styles/input.css -o course/assets/styles/output.css --watch",
    "css:build": "tailwindcss -i course/assets/styles/input.css -o course/assets/styles/output.css --minify",
    "serve": "concurrently -k \"npm:css:dev\" \"quarto preview . --host 0.0.0.0 --port 8001\"",
    "build": "npm run css:build && quarto render course --output-dir course_site"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.16"
  }
}
